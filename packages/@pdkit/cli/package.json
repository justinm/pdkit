{
  "name": "@pdkit/cli",
  "version": "1.0.2",
  "main": "./index.js",
  "bin": {
    "pdkit": "pdkit.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts --fix --no-error-on-unmatched-pattern .",
    "compile": "tsc -p ./tsconfig.json",
    "clean": "find . -name \"*.js\" -not -path \"./node_modules/*\" -delete && find . -name \"*.d.ts\" -not -path \"./node_modules/*\" -delete"
  },
  "files": [
    "./*.js",
    "./**/*.js",
    "./*.d.ts",
    "./**/*.d.ts"
  ],
  "devDependencies": {
    "@types/diff": "5.0.2",
    "@types/glob": "7.2.0",
    "@types/ora": "3.1.0",
    "@types/prompts": "2.4.0",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-import-resolver-typescript": "2.7.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-junit": "^13",
    "json-schema": "0.4.0",
    "prettier": "2.6.1",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "extends": [
      "plugin:import/typescript",
      "prettier",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "node": {},
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "ignorePatterns": [
      "*.js",
      "*.d.ts",
      "node_modules/",
      "*.generated.ts",
      "coverage"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "@typescript-eslint/no-require-imports": [
        "error"
      ],
      "@typescript-eslint/no-shadow": [
        "error"
      ],
      "@typescript-eslint/no-floating-promises": [
        "error"
      ],
      "@typescript-eslint/return-await": [
        "error"
      ],
      "@typescript-eslint/member-ordering": [
        "error",
        {
          "default": [
            "public-static-field",
            "public-static-method",
            "protected-static-field",
            "protected-static-method",
            "private-static-field",
            "private-static-method",
            "field",
            "constructor",
            "method"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [],
          "optionalDependencies": false,
          "peerDependencies": true
        }
      ],
      "import/no-unresolved": [
        "error"
      ],
      "import/order": [
        "warn",
        {
          "groups": [
            "builtin",
            "external"
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-duplicate-imports": [
        "error"
      ],
      "no-shadow": [
        "off"
      ],
      "key-spacing": [
        "error"
      ],
      "no-multiple-empty-lines": [
        "error"
      ],
      "no-return-await": [
        "off"
      ],
      "no-trailing-spaces": [
        "error"
      ],
      "dot-notation": [
        "error"
      ],
      "no-bitwise": [
        "error"
      ]
    },
    "overrides": [
      {
        "files": [
          ".pdkitrc.ts"
        ],
        "rules": {
          "@typescript-eslint/no-require-imports": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "tsconfig.json"
    }
  },
  "dependencies": {
    "@pdkit/core": "1.0.1",
    "chalk": "^4.1.2",
    "constructs": "10.0.97",
    "dependency-graph": "0.11.0",
    "diff": "5.0.0",
    "glob": "7.2.0",
    "glob-regex": "0.3.2",
    "ora": "^5.4.1",
    "prompts": "2.4.2",
    "yargs": "17.4.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)"
    ],
    "reporters": [
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest"
  }
}
